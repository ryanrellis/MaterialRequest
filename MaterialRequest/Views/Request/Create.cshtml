@model MaterialRequest.Models.Request

<form method="post">
    <input asp-for="Completed" value="false" hidden />
    <div class="border p-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group-row">
            <h2 class="text-black-50 pl-3">New Request</h2>
        </div>
        <div class="row">
            <div class="col-12 offset-2">

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="PartNumber"></label>
                    </div>
                    <div class="col-4">
                        <input asp-for="PartNumber" required maxlength="20" minLength="3" class="form-control" />
                        <span asp-validation-for="PartNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Location"></label>
                    </div>
                    <div class="col-4">
                        <input asp-for="Location" maxlength="15" minLength="3" class="form-control" />
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TimeNeeded"></label>
                    </div>
                    <div class="col-4">
                        <input asp-for="TimeNeeded" required class="form-control" />
                        <span asp-validation-for="TimeNeeded" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="RequestedBy"></label>
                    </div>
                    <div class="col-4">
                        <input asp-for="RequestedBy" required maxlength="25" minLength="3" class="form-control" />
                        <span asp-validation-for="RequestedBy" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Create" />
                        </div>
                        <div class="col">
                            <a class="btn btn-danger w-75" asp-action="Index">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


